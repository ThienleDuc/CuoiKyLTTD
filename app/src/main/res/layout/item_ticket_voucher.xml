<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/khung_fragment"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/loai_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Của ứng dụng"
            android:textSize="10dp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icondonvi_voucher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:background="@drawable/khung_voucher"
                    android:src="@drawable/icon17_itemvoucher" />

                <TextView
                    android:id="@+id/namedonvi_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEAM 17"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/pink" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:gravity="end|center"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã dùng:"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/dadung_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/red"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mucgiam_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 10% giảm tối đa  20K"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/gioihangiam_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn tối thiểu 80k"
                android:textColor="@color/black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn sử dụng"
                    android:textSize="8sp"
                    android:textColor="@color/button"/>

                <TextView
                    android:id="@+id/date_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/10/2024"
                    android:layout_marginLeft="15dp"
                    android:textSize="8sp"
                    android:textColor="@color/button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều kiện"
                    android:layout_marginLeft="15dp"
                    android:textSize="8sp"
                    android:textColor="@color/blue"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_voucher"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/khung_button3"
                android:text="Dùng ngay"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>




        </LinearLayout>
    </LinearLayout>

