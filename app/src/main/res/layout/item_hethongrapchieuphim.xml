<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/strock_1_pink_radius_10_white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/strock_1_pink_radius_10_white">

            <ImageView
                android:id="@+id/heThongRapChieu_Logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cgvlogo"
                android:padding="5dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <!-- Layout chứa thông tin rạp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <!-- Tên rạp -->
            <TextView
                android:id="@+id/tenRapChieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="CGV"
                android:textStyle="bold"
                android:textColor="@color/primary_color" />

            <!-- Mô tả rạp -->
            <TextView
                android:id="@+id/motaRapChieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Cam"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Layout chứa các thông tin bổ sung -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <!-- Thông tin đánh giá -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/drawn_star" />

                    <TextView
                        android:id="@+id/rapChieu_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="6.2"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Thông tin bình luận -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chat_bubble" />

                    <TextView
                        android:id="@+id/rapChieu_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="81"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Thông tin vị trí -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:src="@drawable/location_on"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/rapchieu_vitri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:text="10.5 km"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
